<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.rinne.studentadmin.mapper.CourseMapper">

    <!--查询所有用户-->
    <select id="courseList" resultType="pers.rinne.studentadmin.bean.Course">
        select * from stu_course
    </select>

    <!--添加用户-->
    <insert id="save" parameterType="pers.rinne.studentadmin.bean.Course">
        INSERT INTO stu_course VALUES(null,#{studentId},#{courseId},#{courseName},#{teacherId},#{grade})
    </insert>

    <!--删除用户-->
    <delete id="delete" parameterType="int">
        delete from stu_course where link_id = #{linkId}
    </delete>

    <!--根据id查询用户-->
    <select id="findCourseById" resultType="pers.rinne.studentadmin.bean.Course">
        select * from stu_course where link_id = #{linkId}
    </select>

    <!--更改用户信息-->
    <update id="update" parameterType="pers.rinne.studentadmin.bean.Course">
        update stu_course set stu_id=#{studentId},course_id=#{courseId},course_name=#{courseName},teacher_id=#{teacherName},grade=#{grade} where link_id=#{linkId}
    </update>

</mapper>